---
import { Image } from 'astro:assets';
import unicornImage from '/public/unicornio-programando.webp';
import { routes } from '../utils/routes';
---

<section class="relative">
    <div class="container mx-auto px-4 pb-32 pt-32">
        <div class="grid gap-8 lg:grid-cols-2 lg:gap-12">
            <div class="flex flex-col justify-center space-y-6 relative z-20">
                <h1 class="text-4xl font-bold tracking-tight text-dark sm:text-5xl xl:text-6xl">
                    Hacemos realidad tu proyecto tech
                </h1>
                <p class="text-lg text-gray-dark">
                    Consultora de software especializada en desarrollo web e inteligencia artificial, transformando ideas
                    en soluciones tecnol√≥gicas.
                </p>
                <div class="flex gap-4">
                    <a href={routes.contact} class="inline-flex items-center justify-center px-6 py-3 rounded-md bg-secondary hover:bg-secondary/90 text-white font-medium transition-all duration-300">
                        Iniciar Proyecto
                    </a>
                    <a href={routes.services} class="inline-flex items-center justify-center px-6 py-3 rounded-md border-2 border-secondary text-secondary hover:bg-secondary hover:text-white font-medium transition-all duration-300">
                        Ver Servicios
                    </a>
                </div>
            </div>

            <div class="relative lg:absolute lg:right-0 lg:top-16 lg:w-[50%] z-10">
                <div class="relative max-w-[500px] mx-auto">
                    <img 
                        src="/unicornio-programando.webp" 
                        alt="Unicornio programando" 
                        class="w-full h-auto"
                        width="800"
                        height="600"
                    />
                    <!-- Floating elements -->
                    <div class="absolute top-1/4 -right-4 w-12 h-12 bg-primary rounded-full opacity-20"></div>
                    <div class="absolute bottom-1/3 -left-6 w-8 h-8 bg-primary-dark rounded-full opacity-20"></div>
                    <div class="absolute top-1/2 right-1/3 w-6 h-6 bg-primary rounded-full opacity-20"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Wave Separator -->
    <div class="absolute -bottom-1 left-0 right-0">
        <div class="relative">
            <svg viewBox="0 0 1440 320" class="w-full" preserveAspectRatio="none">
                <path 
                    fill="#020B1B" 
                    d="M0,192L48,197.3C96,203,192,213,288,229.3C384,245,480,267,576,266.7C672,267,768,245,864,224C960,203,1056,181,1152,170.7C1248,160,1344,160,1392,160L1440,160L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"
                />
            </svg>
        </div>
    </div>
</section>

<style>
    html {
        scroll-behavior: smooth;
    }
    
    svg {
        height: auto;
        /* Make the SVG taller to ensure it covers the area below */
        min-height: 280px;
    }

    @media (min-width: 1024px) {
        .container {
            position: relative;
            min-height: 600px;
        }
    }
</style> 