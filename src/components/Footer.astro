---
import { routes, externalLinks } from '../utils/routes';
const currentYear = new Date().getFullYear();
---

<footer class="relative bg-dark overflow-hidden">
  <!-- Mesh grid background -->
  <div class="absolute inset-0">
    <div
      class="absolute inset-0 bg-[linear-gradient(rgba(70,160,208,0.02)_1px,transparent_1px),linear-gradient(90deg,rgba(70,160,208,0.02)_1px,transparent_1px)] bg-[size:32px_32px] [mask-image:radial-gradient(ellipse_100%_100%_at_50%_100%,#000_70%,transparent_100%)]"
    >
    </div>
  </div>

  <!-- Glowing orbs -->
  <div class="absolute inset-0 overflow-hidden">
    <div
      class="absolute -left-20 bottom-0 w-64 h-64 bg-primary/5 rounded-full blur-3xl"
    >
    </div>
    <div
      class="absolute -right-20 bottom-0 w-64 h-64 bg-secondary/5 rounded-full blur-3xl"
    >
    </div>
  </div>

  <div class="container relative mx-auto px-4">
    <!-- Main footer content -->
    <div class="py-12">
      <div
        class="flex flex-col md:flex-row justify-between items-center space-y-6 md:space-y-0"
      >
        <!-- Navigation -->
        <nav class="flex space-x-8">
          <a
            href={routes.home}
            class="text-white/60 hover:text-white transition-colors duration-300"
            >Inicio</a
          >
          <a
            href={routes.services}
            class="text-white/60 hover:text-white transition-colors duration-300"
            >Servicios</a
          >
          <a
            href={routes.contact}
            class="text-white/60 hover:text-white transition-colors duration-300"
            >Contacto</a
          >
        </nav>

        <!-- Social links with hover effects -->
        <div class="flex space-x-4">
          <a
            href={externalLinks.linkedin}
            target="_blank"
            rel="noopener noreferrer"
            class="group"
            aria-label="Síguenos en LinkedIn"
          >
            <div
              class="w-10 h-10 rounded-lg bg-white/5 hover:bg-white/10 flex items-center justify-center transition-all duration-300 hover:scale-110"
            >
              <svg
                class="w-5 h-5 text-white/60 group-hover:text-white transition-colors duration-300"
                viewBox="0 0 24 24"
                fill="currentColor"
              >
                <path
                  d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
                ></path>
              </svg>
            </div>
          </a>
          <a
            href={externalLinks.github}
            target="_blank"
            rel="noopener noreferrer"
            class="group"
            aria-label="Síguenos en GitHub"
          >
            <div
              class="w-10 h-10 rounded-lg bg-white/5 hover:bg-white/10 flex items-center justify-center transition-all duration-300 hover:scale-110"
            >
              <svg
                class="w-5 h-5 text-white/60 group-hover:text-white transition-colors duration-300"
                viewBox="0 0 24 24"
                fill="currentColor"
              >
                <path
                  d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
                ></path>
              </svg>
            </div>
          </a>
        </div>
      </div>
    </div>

    <!-- Copyright with animated border -->
    <div class="relative py-6">
      <!-- Animated gradient line -->
      <div
        class="absolute top-0 left-1/2 -translate-x-1/2 w-3/4 h-px bg-gradient-to-r from-transparent via-white/20 to-transparent"
      >
      </div>

      <p class="text-center text-white/40 text-sm">
        © {currentYear} Cofoundy. Todos los derechos reservados.
      </p>
    </div>
  </div>

  <!-- Subtle gradient overlay at the top -->
  <div
    class="absolute inset-x-0 top-0 h-px bg-gradient-to-r from-transparent via-primary/20 to-transparent"
  >
  </div>
</footer>

<style>
  /* Gradient line animation */
  .bg-gradient-to-r {
    background-size: 200% 100%;
    animation: shimmer 4s linear infinite;
  }

  @keyframes shimmer {
    0% {
      background-position: -200% center;
    }
    100% {
      background-position: 200% center;
    }
  }
</style>
