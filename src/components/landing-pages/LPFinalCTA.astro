              />
            </div>

            <!-- Email -->
            <div>
              <label class="block text-white/80 mb-1 md:mb-2" for="email">{t('lp.cta.form.email')} *</label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-2 md:py-3 bg-white/5 border border-white/10 rounded-xl text-white placeholder-white/40 focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-colors duration-300"
                placeholder={t('lp.cta.form.email_placeholder')}
              />
            </div>

            <!-- Phone -->
            <div>
              <label class="block text-white/80 mb-1 md:mb-2" for="phone">{t('lp.cta.form.phone')}</label>
              <input
                type="tel"
                id="phone"
                name="phone"
                class="w-full px-4 py-2 md:py-3 bg-white/5 border border-white/10 rounded-xl text-white placeholder-white/40 focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-colors duration-300"
                placeholder={t('lp.cta.form.phone_placeholder')}
              />
            </div>

            <!-- Message -->
            <div>
              <label class="block text-white/80 mb-1 md:mb-2" for="message">{t('lp.cta.form.project')}</label>
              <textarea
                id="message"
                name="message"
                rows="3"
                class="w-full px-4 py-2 md:py-3 bg-white/5 border border-white/10 rounded-xl text-white placeholder-white/40 focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-colors duration-300 resize-none"
                placeholder={t('lp.cta.form.project_placeholder')}></textarea>
            </div>

            <!-- Submit -->
            <button
              type="submit"
              class="w-full px-6 md:px-8 py-3 md:py-4 bg-primary hover:bg-primary-dark text-white font-medium rounded-xl transition-all duration-300 transform hover:scale-105 hover:shadow-lg flex items-center justify-center gap-2"
              data-gtm-action="click"
              data-gtm-category="landing-pages"
              data-gtm-label="final-cta-submit"
            >
              <span id="submit-text">{t('lp.cta.form.submit')}</span>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
              </svg>
            </button>

            <!-- Success message -->
            <div id="form-success" class="hidden text-center text-green-400 font-medium py-4">
              {t('lp.cta.form.success')}
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  // Capture UTM parameters
  document.addEventListener('DOMContentLoaded', () => {
    const params = new URLSearchParams(window.location.search);
    const utmFields = ['utm_source', 'utm_medium', 'utm_campaign', 'utm_content', 'utm_term', 'gclid'];

    utmFields.forEach((field) => {
      const value = params.get(field);
      if (value) {
        const input = document.getElementById(field) as HTMLInputElement;
        if (input) input.value = value;
      }
    });

    // Form submission handling
    const form = document.getElementById('landing-contact-form') as HTMLFormElement;
    const submitBtn = form?.querySelector('button[type="submit"]');
    const submitText = document.getElementById('submit-text');
    const successMessage = document.getElementById('form-success');

    form?.addEventListener('submit', async (e) => {
      e.preventDefault();

      if (submitBtn) submitBtn.setAttribute('disabled', 'true');
      if (submitText) submitText.textContent = 'Enviando...';

      try {
        const formData = new FormData(form);
        const response = await fetch(form.action, {
          method: 'POST',
          body: formData,
          headers: { 'Accept': 'application/json' },
        });

        if (response.ok) {
          form.reset();
          successMessage?.classList.remove('hidden');

          // Track conversion
          if (typeof gtag !== 'undefined') {
            gtag('event', 'generate_lead', {
              currency: 'PEN',
              value: 190,
            });
          }
        } else {
          throw new Error('Form submission failed');
        }
      } catch (error) {
        console.error('Form error:', error);
        alert('Hubo un error. Por favor intenta de nuevo.');
      } finally {
        if (submitBtn) submitBtn.removeAttribute('disabled');
        if (submitText) submitText.textContent = 'Solicitar Cotización';
      }
    });
  });
</script>

<style>
  /* Floating animations */
  @keyframes float {
    0%, 100% {
      transform: translateY(0) rotate(0);
    }
    50% {
      transform: translateY(-20px) rotate(5deg);
    }
  }

  @keyframes float-delayed {
    0%, 100% {
      transform: translateY(0) rotate(0);
    }
    50% {
      transform: translateY(-30px) rotate(-5deg);
    }
  }

  .animate-float {
    animation: float 15s ease-in-out infinite;
  }

  .animate-float-delayed {
    animation: float-delayed 18s ease-in-out infinite;
  }

  /* Particle animation */
  .particle-container {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .particle {
    position: absolute;
    width: var(--size);
    height: var(--size);
    background: radial-gradient(circle at center, rgba(70, 160, 208, 0.7) 0%, transparent 100%);
    border-radius: 50%;
    top: 0;
    left: var(--start-x);
    animation: particle 10s ease-in infinite;
    animation-delay: var(--delay);
  }

  @keyframes particle {
    0% {
      transform: translateY(-20px) scale(0);
      opacity: 0;
    }
    50% {
      opacity: 1;
    }
    100% {
      transform: translateY(100vh) scale(1);
      opacity: 0;
    }
  }

  /* Wave animations */
  @keyframes wave-slow {
    0%, 100% {
      d: path("M0 50L48 45.7C96 41.3 192 32.7 288 27.8C384 23 480 22 576 28.8C672 35.7 768 50.3 864 55.2C960 60 1056 55 1152 46.8C1248 38.7 1344 27.3 1392 21.7L1440 16V100H0V50Z");
    }
    50% {
      d: path("M0 60L48 55.7C96 51.3 192 42.7 288 37.8C384 33 480 32 576 38.8C672 45.7 768 60.3 864 65.2C960 70 1056 65 1152 56.8C1248 48.7 1344 37.3 1392 31.7L1440 26V100H0V60Z");
    }
  }

  @keyframes wave-medium {
    0%, 100% {
      d: path("M0 70L48 64.3C96 58.7 192 47.3 288 44.7C384 42 480 48 576 54.8C672 61.7 768 69.3 864 69.2C960 69 1056 61 1152 55.2C1248 49.3 1344 45.7 1392 43.8L1440 42V100H0V70Z");
    }
    50% {
      d: path("M0 80L48 74.3C96 68.7 192 57.3 288 54.7C384 52 480 58 576 64.8C672 71.7 768 79.3 864 79.2C960 79 1056 71 1152 65.2C1248 59.3 1344 55.7 1392 53.8L1440 52V100H0V80Z");
    }
  }

  @keyframes wave-fast {
    0%, 100% {
      d: path("M0 80L48 77.3C96 74.7 192 69.3 288 71.2C384 73 480 82 576 84.8C672 87.7 768 84.3 864 79.2C960 74 1056 67 1152 65.2C1248 63.3 1344 66.7 1392 68.3L1440 70V100H0V80Z");
    }
    50% {
      d: path("M0 90L48 87.3C96 84.7 192 79.3 288 81.2C384 83 480 92 576 94.8C672 97.7 768 94.3 864 89.2C960 84 1056 77 1152 75.2C1248 73.3 1344 76.7 1392 78.3L1440 80V100H0V90Z");
    }
  }

  .animate-wave-slow {
    animation: wave-slow 8s ease-in-out infinite;
  }

  .animate-wave-medium {
    animation: wave-medium 6s ease-in-out infinite;
  }

  .animate-wave-fast {
    animation: wave-fast 4s ease-in-out infinite;
  }

  /* Reduce animations on mobile */
  @media (max-width: 640px) {
    .animate-float,
    .animate-float-delayed {
      animation-duration: 0s;
    }

    .particle-container {
      display: none;
    }
  }

  /* Reduce animations on tablet */
  @media (max-width: 1024px) {
    .particle-container {
      opacity: 0.5;
    }
  }

  /* Respect user preference for reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .animate-float,
    .animate-float-delayed,
    .animate-wave-slow,
    .animate-wave-medium,
    .animate-wave-fast {
      animation: none !important;
    }

    .particle-container {
      display: none;
    }
  }
</style>
