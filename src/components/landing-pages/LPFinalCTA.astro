  <!-- Particle effect -->
  <div class="particle-container">
    {
      Array.from({ length: 20 }).map((_, i) => (
        <div
          class="particle"
          style={`--delay: ${i * 0.5}s; --size: ${Math.random() * 3 + 1}px; --start-x: ${Math.random() * 100}%;`}
