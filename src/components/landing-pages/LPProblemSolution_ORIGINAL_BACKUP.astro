---
import { getLangFromUrl, useTranslations } from "../../utils/i18n";

const currentLang = getLangFromUrl(Astro.url);
const t = useTranslations(currentLang);

const problems = [
  { icon: 'template', text: 'Plantilla genérica' },
  { icon: 'slow', text: 'Carga lento (>5 seg)' },
  { icon: 'noConvert', text: 'No convierte visitas' },
  { icon: 'noAnalytics', text: 'Sin métricas reales' }
];

const solutions = [
  { icon: 'code', text: 'Código 100% tuyo' },
  { icon: 'fast', text: 'Carga en <2 seg' },
  { icon: 'convert', text: 'Diseño que vende' },
  { icon: 'analytics', text: 'Métricas incluidas' }
];
---

<section class="relative bg-white py-16 md:py-24 overflow-hidden">
  <div class="container relative mx-auto px-4">
    <div class="text-center mb-12 md:mb-16">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-dark mb-4">
        ¿Tu web no genera clientes?
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        La diferencia entre perder dinero y hacer crecer tu negocio
      </p>
    </div>

    <!-- Side by Side Comparison -->
    <div class="grid md:grid-cols-2 gap-6 md:gap-8 max-w-6xl mx-auto">

      <!-- Problem Column -->
      <div class="relative bg-gradient-to-br from-red-50 to-red-100/50 border-4 border-red-300 rounded-3xl p-6 md:p-8 shadow-xl">
        <div class="absolute -top-5 left-6">
          <div class="bg-gradient-to-br from-red-600 to-red-700 text-white px-5 py-2 rounded-full text-sm font-bold shadow-xl">
            ❌ EL PROBLEMA
          </div>
        </div>

        <div class="mt-4 space-y-4 mb-8">
          {problems.map((problem) => (
            <div class="flex items-start gap-3 p-3 bg-gray-50 rounded-lg">
              {problem.icon === 'template' && (
                <svg class="w-6 h-6 text-gray-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h4a1 1 0 011 1v7a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM14 5a1 1 0 011-1h4a1 1 0 011 1v7a1 1 0 01-1 1h-4a1 1 0 01-1-1V5zM4 16a1 1 0 011-1h4a1 1 0 011 1v3a1 1 0 01-1 1H5a1 1 0 01-1-1v-3zM14 16a1 1 0 011-1h4a1 1 0 011 1v3a1 1 0 01-1 1h-4a1 1 0 01-1-1v-3z" />
                </svg>
              )}
              {problem.icon === 'slow' && (
                <svg class="w-6 h-6 text-gray-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              )}
              {problem.icon === 'noConvert' && (
                <svg class="w-6 h-6 text-gray-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 17h8m0 0V9m0 8l-8-8-4 4-6-6" />
                </svg>
              )}
              {problem.icon === 'noAnalytics' && (
                <svg class="w-6 h-6 text-gray-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M12 12h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              )}
              <span class="text-gray-700 font-medium">{problem.text}</span>
            </div>
          ))}
        </div>

        <div class="pt-6 border-t border-gray-200">
          <div class="text-sm text-gray-500 mb-1">Agencias tradicionales:</div>
          <div class="text-2xl font-bold text-gray-800">S/.15,000+</div>
          <div class="text-sm text-gray-500 mt-1">⏱️ Tiempo: 3-6 meses</div>
        </div>
      </div>

      <!-- Solution Column -->
      <div class="relative bg-gradient-to-br from-primary/10 via-primary/20 to-primary-dark/10 border-4 border-primary rounded-3xl p-6 md:p-8 shadow-2xl">
        <div class="absolute -top-5 left-6">
          <div class="bg-gradient-to-br from-primary to-primary-dark text-white px-5 py-2 rounded-full text-sm font-bold shadow-xl">
            ✓ NUESTRA SOLUCIÓN
          </div>
        </div>

        <div class="mt-4 space-y-4 mb-8">
          {solutions.map((solution) => (
            <div class="flex items-start gap-3 p-3 bg-white/70 backdrop-blur-sm rounded-lg border border-primary/20">
              {solution.icon === 'code' && (
                <svg class="w-6 h-6 text-primary flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
                </svg>
              )}
              {solution.icon === 'fast' && (
                <svg class="w-6 h-6 text-primary flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
              )}
              {solution.icon === 'convert' && (
                <svg class="w-6 h-6 text-primary flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                </svg>
              )}
              {solution.icon === 'analytics' && (
                <svg class="w-6 h-6 text-primary flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                </svg>
              )}
              <span class="text-dark font-medium">{solution.text}</span>
            </div>
          ))}
        </div>

        <div class="pt-6 border-t border-primary/30">
          <div class="text-sm text-primary-dark mb-1 font-semibold">Cofoundy:</div>
          <div class="text-2xl font-bold text-primary-dark">Desde S/.1,200</div>
          <div class="text-sm text-primary-dark mt-1 font-semibold">⚡ Tiempo: 5-7 días</div>
        </div>
      </div>
    </div>

  </div>
</section>
