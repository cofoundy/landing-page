---
import { getLangFromUrl, useTranslations } from "../../utils/i18n";

const currentLang = getLangFromUrl(Astro.url);
const t = useTranslations(currentLang);
---

<section class="relative bg-white py-16 md:py-24">
  <div class="container mx-auto px-4">

    <!-- Single Powerful Testimonial -->
    <div class="max-w-3xl mx-auto mb-12">
      <div class="bg-gradient-to-br from-primary/5 to-secondary/5 border border-primary/20 rounded-2xl p-8 md:p-10">
        <div class="flex items-start gap-4 mb-6">
          <svg class="w-10 h-10 text-primary flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
            <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
          </svg>
          <div>
            <p class="text-lg md:text-xl text-gray-700 mb-4 leading-relaxed">
              {t('lp.testimonials.genera.quote')}
            </p>
            <div class="flex items-center gap-3">
              <div>
                <p class="font-bold text-dark">{t('lp.testimonials.genera.author')}</p>
                <p class="text-sm text-primary">üèÜ Ganador Startup Per√∫ 12G</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Client Logos -->
    <div class="max-w-4xl mx-auto">
      <p class="text-center text-gray-500 text-sm mb-8">Conf√≠an en nosotros:</p>
      <div class="flex flex-wrap justify-center items-center gap-8 md:gap-12">
        <!-- Logo 1 - GENERA -->
        <div class="group relative">
          <div class="w-32 h-32 md:w-36 md:h-36 flex items-center justify-center p-4 rounded-xl bg-gray-50 hover:bg-white border border-gray-200 hover:border-primary/30 hover:shadow-lg transition-all duration-300">
            <img
              src="/clients/genera.png"
              alt="Genera - Ganador Startup Per√∫ 12G"
              class="w-full h-full object-contain filter grayscale opacity-70 group-hover:grayscale-0 group-hover:opacity-100 transition-all duration-300"
              loading="lazy"
            />
          </div>
        </div>

        <!-- Logo 2 - ENMANCHA -->
        <div class="group relative">
          <div class="w-32 h-32 md:w-36 md:h-36 flex items-center justify-center p-4 rounded-xl bg-gray-50 hover:bg-white border border-gray-200 hover:border-primary/30 hover:shadow-lg transition-all duration-300">
            <img
              src="/clients/enmancha.png"
              alt="EnMancha - Cliente Cofoundy"
              class="w-full h-full object-contain filter grayscale opacity-70 group-hover:grayscale-0 group-hover:opacity-100 transition-all duration-300"
              loading="lazy"
            />
          </div>
        </div>

        <!-- Logo 3 - ECOFEMME -->
        <div class="group relative">
          <div class="w-32 h-32 md:w-36 md:h-36 flex items-center justify-center p-4 rounded-xl bg-gray-50 hover:bg-white border border-gray-200 hover:border-primary/30 hover:shadow-lg transition-all duration-300">
            <img
              src="/clients/ecofemme.png"
              alt="Ecofemme Fashion - Cliente Cofoundy"
              class="w-full h-full object-contain filter grayscale opacity-70 group-hover:grayscale-0 group-hover:opacity-100 transition-all duration-300"
              loading="lazy"
            />
          </div>
        </div>

        <!-- Logo 4 - BILIO -->
        <div class="group relative">
          <div class="w-32 h-32 md:w-36 md:h-36 flex items-center justify-center p-4 rounded-xl bg-gray-50 hover:bg-white border border-gray-200 hover:border-primary/30 hover:shadow-lg transition-all duration-300">
            <img
              src="/clients/bilio.png"
              alt="Bilio - Cliente Cofoundy"
              class="w-full h-full object-contain filter grayscale opacity-70 group-hover:grayscale-0 group-hover:opacity-100 transition-all duration-300"
              loading="lazy"
            />
          </div>
        </div>
      </div>
    </div>

  </div>
</section>
