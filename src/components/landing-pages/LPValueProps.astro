---
import { getLangFromUrl, useTranslations } from "../../utils/i18n";

const currentLang = getLangFromUrl(Astro.url);
const t = useTranslations(currentLang);

const values = [
  {
    icon: '/icons/fttvwdlw.json', // rocket for speed
    title: t('lp.value.speed.title'),
    description: t('lp.value.speed.description'),
    accent: 'from-yellow-400 to-orange-500',
    iconColor: '#facc15', // yellow-400
    useLordicon: true,
  },
  {
    icon: '/icons/qbaenubu.json', // code
    title: t('lp.value.quality.title'),
    description: t('lp.value.quality.description'),
    accent: 'from-primary to-secondary',
    iconColor: '#46a0d0', // primary
    useLordicon: true,
  },
  {
    icon: 'support',
    title: t('lp.value.support.title'),
    description: t('lp.value.support.description'),
    accent: 'from-green-400 to-emerald-500',
    iconColor: '#4ade80', // green-400
    useLordicon: false,
  },
];
---

<section class="relative bg-dark py-20 md:py-28 overflow-hidden">
  <!-- Animated background -->
  <div class="absolute inset-0 opacity-20" style="background-image: radial-gradient(circle at 1px 1px, rgba(70, 160, 208, 0.3) 1px, transparent 0); background-size: 40px 40px;"></div>

  <!-- Floating orbs -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-20 left-20 w-64 h-64 bg-primary/10 rounded-full blur-3xl animate-float"></div>
    <div class="absolute bottom-20 right-20 w-80 h-80 bg-secondary/10 rounded-full blur-3xl animate-float-delayed"></div>
  </div>

  <div class="container relative mx-auto px-4">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-4">
        {t('lp.value.title')}
      </h2>
    </div>

    <!-- Value Props Grid -->
    <div class="grid md:grid-cols-3 gap-8">
      {values.map((value, index) => (
        <div
          class="group relative"
          style={`animation-delay: ${index * 150}ms`}
        >
          <div class="relative bg-white/5 backdrop-blur-lg rounded-2xl p-8 h-full border border-white/10 transform transition-all duration-500 hover:scale-105 hover:-translate-y-2">
            <!-- Hover glow -->
            <div class={`absolute inset-0 bg-gradient-to-br ${value.accent} rounded-2xl opacity-0 group-hover:opacity-20 blur-xl transition-opacity duration-500`}></div>

            <!-- Content -->
            <div class="relative z-10">
              <!-- Icon -->
              <div class="mb-6">
                {value.useLordicon ? (
                  <lord-icon
                    src={value.icon}
                    trigger="hover"
                    colors={`primary:${value.iconColor},secondary:#1b577e`}
                    style="width:80px;height:80px">
                  </lord-icon>
                ) : (
                  <svg class="w-20 h-20 icon-spin text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z" />
                  </svg>
                )}
              </div>

              <!-- Title -->
              <h3 class="text-2xl font-bold text-white mb-4">
                {value.title}
              </h3>

              <!-- Description -->
              <p class="text-white/70 text-lg leading-relaxed group-hover:text-white/90 transition-colors duration-300">
                {value.description}
              </p>
            </div>

            <!-- Corner accent -->
            <div class={`absolute top-0 right-0 w-20 h-20 bg-gradient-to-br ${value.accent} opacity-0 group-hover:opacity-20 rounded-tr-2xl transition-opacity duration-500`}></div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-20px); }
  }

  @keyframes float-delayed {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-30px); }
  }

  .animate-float {
    animation: float 8s ease-in-out infinite;
  }

  .animate-float-delayed {
    animation: float-delayed 10s ease-in-out infinite;
    animation-delay: 2s;
  }

  .grid > div {
    animation: fadeInUp 0.8s ease-out forwards;
    opacity: 0;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* SVG icon animation for support */
  .icon-spin {
    animation: spin 10s linear infinite;
    filter: drop-shadow(0 0 8px currentColor);
  }

  @keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }

  .group:hover .icon-spin {
    animation: spin-fast 0.8s ease-in-out;
  }

  @keyframes spin-fast {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }

  /* Lordicon hover glow */
  lord-icon {
    transition: filter 0.3s ease;
  }

  .group:hover lord-icon {
    filter: drop-shadow(0 0 15px currentColor);
  }
</style>
