---
import { getLangFromUrl, useTranslations } from "../../utils/i18n";

const currentLang = getLangFromUrl(Astro.url);
const t = useTranslations(currentLang);

const steps = [
  {
    lottie: 'aqrzgjfy', // clock-time icon
    title: 'Llamada',
    time: '15 min',
    description: 'Entendemos tu negocio'
  },
  {
    lottie: 'lupuorrc', // design/pen icon
    title: 'Diseño',
    time: 'Día 1-2',
    description: 'Creamos tu propuesta'
  },
  {
    lottie: 'kkvxgpti', // code brackets
    title: 'Desarrollo',
    time: 'Día 3-6',
    description: 'Programamos tu sitio'
  },
  {
    lottie: 'rxufjlal', // rocket launch
    title: 'Lanzamiento',
    time: 'Día 7',
    description: 'Tu web en vivo'
  }
];
---

<section class="relative bg-gradient-to-b from-primary/5 to-white py-16 md:py-20">
  <div class="container mx-auto px-4">

    <!-- Section Header -->
    <div class="text-center mb-12 md:mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-dark mb-3">
        Así de simple
      </h2>
      <p class="text-lg text-gray-600">
        De la idea a tu web en vivo en solo 7 días
      </p>
    </div>

    <!-- Process Timeline -->
    <div class="max-w-5xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6 md:gap-4">
        {steps.map((step, index) => (
          <div class="relative">
            {/* Step Card */}
            <div class="relative bg-white border-2 border-gray-100 hover:border-primary/50 rounded-2xl p-6 hover:shadow-xl transition-all group">

              {/* Step Number Badge */}
              <div class="absolute -top-3 -right-3 w-8 h-8 bg-primary rounded-full flex items-center justify-center text-white text-sm font-bold shadow-lg ring-4 ring-white">
                {index + 1}
              </div>

              {/* Lottie Icon */}
              <div class="mb-4">
                <lottie-player
                  src={`/icons/${step.lottie}.json`}
                  background="transparent"
                  speed="1"
                  style="width: 80px; height: 80px; margin: 0 auto;"
                  loop
                  autoplay
                ></lottie-player>
              </div>

              {/* Content */}
              <div class="text-center">
                <h3 class="text-lg md:text-xl font-bold text-dark mb-1">
                  {step.title}
                </h3>
                <div class="text-sm text-primary font-semibold mb-2">
                  {step.time}
                </div>
                <p class="text-sm text-gray-600">
                  {step.description}
                </p>
              </div>
            </div>

            {/* Arrow Connector (hidden on last item and mobile) */}
            {index < steps.length - 1 && (
              <div class="hidden md:flex absolute top-1/2 -right-2 transform translate-x-1/2 -translate-y-1/2 z-10">
                <svg class="w-6 h-6 text-primary" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
              </div>
            )}
          </div>
        ))}
      </div>
    </div>

    <!-- Bottom CTA -->
    <div class="mt-12 text-center">
      <a
        href="https://wa.link/3wf2cv"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 bg-gradient-to-r from-primary to-primary-dark text-white px-8 py-4 rounded-xl font-bold hover:shadow-xl hover:-translate-y-1 transition-all"
      >
        <span>Comenzar ahora</span>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
        </svg>
      </a>
    </div>

  </div>
</section>

<script>
  // Load Lottie player if not already loaded
  if (!customElements.get('lottie-player')) {
    const script = document.createElement('script');
    script.src = 'https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js';
    document.head.appendChild(script);
  }
</script>
