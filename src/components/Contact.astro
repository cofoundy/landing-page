        Array.from({ length: 20 }).map((_, i) => (
          <div
            class="particle"
            style={`--delay: ${i * 0.5}s; --size: ${Math.random() * 4 + 2}px; --start-x: ${Math.random() * 100}%; --end-x: ${Math.random() * 100}%;`}
          />
        ))
      }
    </div>
