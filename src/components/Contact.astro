    animation: float-delayed 18s ease-in-out infinite;
  }

  /* Particle animations */
  .particle-container {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .particle {
    position: absolute;
    width: var(--size);
    height: var(--size);
    background: radial-gradient(
      circle at center,
      rgba(70, 160, 208, 0.5) 0%,
      transparent 100%
    );
    border-radius: 50%;
    top: 0;
    left: var(--start-x);
    animation: particle 10s ease-in infinite;
    animation-delay: var(--delay);
  }

  @keyframes particle {
    0% {
      transform: translateY(-20px) scale(0);
      opacity: 0;
    }
    50% {
      opacity: 1;
    }
    100% {
      transform: translateY(120vh) scale(1);
      opacity: 0;
    }
  }
</style>
